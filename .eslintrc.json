{
  "extends": "airbnb-base",
  "env": {
    "mocha": true
  },
  "rules": {
    "no-plusplus": [
      "error", {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-use-before-define": 0,
    "no-underscore-dangle": 1,
    "object-curly-newline": [
        "error", {
            "multiline": true
        }
    ]
  }
}
